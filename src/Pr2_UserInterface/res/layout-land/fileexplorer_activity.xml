<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fileexplorer_activity_landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#200000ff"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <fragment
        android:id="@+id/fileexplorer_fragment_dir"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="variationenzumthema_pr2.FileExplorerDirectoryFragment"
        android:textSize="16sp" />

    <fragment
        android:id="@+id/fileexplorer_fragment_file"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        class="variationenzumthema_pr2.FileExplorerFileFragment"
        android:textSize="16sp" />

</LinearLayout>